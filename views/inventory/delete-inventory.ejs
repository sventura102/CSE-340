<link href="/css/styles.css" rel="stylesheet" type="text/css">

<!--Heading-->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<!--Message block for errors-->
<%- messages() %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- Delete Inventory Form -->
<div class="newInv-container">
    <p><i>Confirm Deletion - The delete is permanent.</i></p>
    <form id="newInv" action="/inv/delete/" method="post">
        <label for="inv_make">Make:</label>
        <input type="text" name="inv_make" id="inv_make" min="3" placeholder="Min of 3 characters" readonly  required value="<%= locals.inv_make %>">
        <label for="inv_model">Model:</label>
        <input type="text" name="inv_model" id="inv_model" minlength="3" placeholder="Min of 3 characters" readonly required value="<%= locals.inv_model %>">
        <label for="inv_price">Price: </label>
        <input type="number" name="inv_price" id="inv_price" readonly required value="<%= locals.inv_price %>">
        <label for="inv_year">Year: </label>
        <input type="number" min="4" name="inv_year" id="inv_year" placeholder="4-digit year" readonly required value="<%= locals.inv_year %>">

        <button type="submit">Delete Vehicle</button>
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"<% } %>>
    </form>

</div>